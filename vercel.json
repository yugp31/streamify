{
    "version": 2,
    "builds": [
        {
            "src": "multimedia_site/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles_build" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "multimedia_site/wsgi.py"
        }
    ]
}
